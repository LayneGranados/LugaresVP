<!--
http://books.zkoss.org/wiki/ZK_Developer's_Reference/UI_Patterns/Event_Threads
-->
<zk>
    <language-config>
        <addon-uri>/WEB-INF/ckez-bind-addon.xml</addon-uri>
    </language-config>
    <system-config>
        <ui-factory-class>
            org.zkoss.zk.ui.http.SerializableUiFactory
        </ui-factory-class>
        <disable-event-thread>
            false
        </disable-event-thread>
    </system-config>
    <library-property>
        <name>org.zkoss.web.preferred.locale</name>
        <value>fr</value>
    </library-property>
</zk>
