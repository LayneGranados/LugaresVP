<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gapxventuraplaza"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <supports-screens
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:xlargeScreens="true"
        android:resizeable="true"
        android:anyDensity="true"/>


    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:name="com.gapxventuraplaza.domain.Globales"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.gapxventuraplaza.MainActivity"
            android:configChanges="screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="com.gapxventuraplaza.DetailActivity"
            android:label="@string/title_activity_detail_view"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="com.gapxventuraplaza.TransitionDetailActivity"
            android:label="@string/title_activity_detail_view"
            android:theme="@style/AppThemeTrans" >
        </activity>
        <activity
            android:name="com.gapxventuraplaza.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gapxventuraplaza.CodeScanner"
            android:label="@string/title_activity_options" >
        </activity>
        <activity
            android:name="com.gapxventuraplaza.CreateSupervisionActivity"
            android:label="@string/title_activity_options"
            android:theme="@android:style/Theme.NoTitleBar">>
        </activity>
    </application>

</manifest>
